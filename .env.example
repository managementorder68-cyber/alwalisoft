# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
NEXT_PUBLIC_WEB_APP_URL=https://yourapp.vercel.app

# JWT & Authentication
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
NEXTAUTH_SECRET=your_nextauth_secret_here

# ============================================
# GOOGLE ADMOB (Primary Platform)
# ============================================
# Get these from: https://admob.google.com
NEXT_PUBLIC_ADMOB_APP_ID=ca-app-pub-XXXXXXXXXXXXXXXX~YYYYYYYYYY
NEXT_PUBLIC_ADMOB_REWARDED_VIDEO_ID=ca-app-pub-XXXXXXXXXXXXXXXX/ZZZZZZZZZZ
NEXT_PUBLIC_ADMOB_INTERSTITIAL_ID=ca-app-pub-XXXXXXXXXXXXXXXX/WWWWWWWWWW
NEXT_PUBLIC_ADMOB_BANNER_ID=ca-app-pub-XXXXXXXXXXXXXXXX/VVVVVVVVVV

# ============================================
# UNITY ADS (For Games)
# ============================================
# Get these from: https://dashboard.unity3d.com
NEXT_PUBLIC_UNITY_GAME_ID=your_unity_game_id_here
NEXT_PUBLIC_UNITY_REWARDED_ID=your_unity_rewarded_placement_id
NEXT_PUBLIC_UNITY_INTERSTITIAL_ID=your_unity_interstitial_placement_id

# ============================================
# APPLOVIN (Optional - Fallback/Mediation)
# ============================================
# Get these from: https://www.applovin.com
NEXT_PUBLIC_APPLOVIN_SDK_KEY=your_applovin_sdk_key_here
NEXT_PUBLIC_APPLOVIN_REWARDED_ID=your_applovin_rewarded_ad_unit_id
NEXT_PUBLIC_APPLOVIN_INTERSTITIAL_ID=your_applovin_interstitial_ad_unit_id
NEXT_PUBLIC_APPLOVIN_BANNER_ID=your_applovin_banner_ad_unit_id

# ============================================
# FACEBOOK AUDIENCE NETWORK (Optional - High eCPM)
# ============================================
# Get these from: https://www.facebook.com/audiencenetwork
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_FACEBOOK_REWARDED_ID=your_facebook_rewarded_placement_id
NEXT_PUBLIC_FACEBOOK_INTERSTITIAL_ID=your_facebook_interstitial_placement_id
NEXT_PUBLIC_FACEBOOK_BANNER_ID=your_facebook_banner_placement_id

# ============================================
# TELEGRAM ADS (For Channels - Automatic)
# ============================================
# Register at: https://promote.telegram.org
# No API keys needed - Telegram handles automatically
# Requires: +1000 subscribers, public channel

# ============================================
# AD SETTINGS
# ============================================
NEXT_PUBLIC_AD_DAILY_LIMIT=10
NEXT_PUBLIC_AD_REWARD_AMOUNT=500

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_URL=redis://localhost:6379

